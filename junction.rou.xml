<routes>
    <vType id="car" accel="1.0" decel="4.5" sigma="0.5" length="5" maxSpeed="16.67" color="1,0,0"/>

    <route id="north_south" edges="north_in south_out"/>
    <route id="south_north" edges="south_in north_out"/>
    <route id="east_west" edges="east_in west_out"/>
    <route id="west_east" edges="west_in east_out"/>

    <!-- Reduced to 300 vehs/hour (~1 car every 12s) -->
    <flow id="f1" type="car" route="north_south" begin="0" end="3600" vehsPerHour="300"/>
    <flow id="f2" type="car" route="south_north" begin="0" end="3600" vehsPerHour="300"/>
    <flow id="f3" type="car" route="east_west" begin="0" end="3600" vehsPerHour="300"/>
    <flow id="f4" type="car" route="west_east" begin="0" end="3600" vehsPerHour="300"/>
</routes>
